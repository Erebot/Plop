<?xml version="1.0"?>
<project name="Erebot_buildenv_phpunit">
    <target name="qa_test" depends="qa_pre_coverage"
        description="Run (unit) tests using PHPUnit">
        <phpunit codecoverage="true" bootstrap="tests/testenv/bootstrap.php">
